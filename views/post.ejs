<!-- <html> -->
<%- include('./partials/head'); %>
<body class="d-flex flex-column h-100">
    <%- include('./partials/nav'); %>
    <main class="flex-shrink-0">
        <div class="container">
            <div class="card">
                <h5 class="card-header">Post</h5>
                <div class="card-body">
                    <h5 class="card-title"><%= locals.post && locals.post.title %></h5>
                    <p class="card-text"><%= locals.post && locals.post.body %></p>
                </div>
            </div>
        </div>
        
        <div class="container">
            <% locals.comments && locals.comments.forEach(comment => { %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= comment.name %></h5>
                    <blockquote class="blockquote mb-0">
                        <p><%= comment.body %></p>
                        <footer class="blockquote-footer"><%= comment.email %></footer>
                    </blockquote>
                </div>
            </div>
            <% }) %>
        </div>
    </main>
    <%- include('./partials/footer'); %>
</body>
</html>
    